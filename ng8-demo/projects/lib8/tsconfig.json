{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "es5",
    "module": "es2015",
    "sourceMap": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es2015", "dom"],
    "paths": {
      "@worktile/lib8": ["./public-api.ts"],
      "@worktile/lib8/*": ["./*"]
    }
  },
  "files": ["./public-api.ts"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
